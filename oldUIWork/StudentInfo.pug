extends index.pug

append head
    include dropdown.pug
    include Accordion.pug
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', rel='stylesheet', media='screen')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
block content
    form.form-horizontal
        .form-group
            .col-sm-2
                p General Information
        .form-group
            .col-sm-2
                label First Name
            .col-sm-10
                input.form-control(type = 'text' id = 'inputFirstName' placeholder = 'First Name')
        .form-group
            .col-sm-2
                label Last Name
            .col-sm-10
                input.form-control(type = 'text' id = 'inputLastName' placeholder = 'Last Name')
        .form-group
            .col-sm-2
                label ID Number
            .col-sm-10
                input.form-control(type = 'number' placeholder = 'ID Number')
        .form-group
            .col-sm-2
                label Date of Birth
            .col-sm-10
                input.form-control(type = 'date')
        .form-group
            .col-sm-2
                label Date of entry into Next Generation Men
            .col-sm-10
                input.form-control(type = 'date')
        .form-group
            .col-sm-2
                label Parent 1 Name
            .col-sm-10
                input.form-control(type = 'PhoneNumber')
        .form-group
            .col-sm-2
                label Parent 1 Phone Number
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                label Parent 2 Name
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                label Parent 2 Phone Number
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                p Pre-Program Information
        .form-group
            .col-sm-2
                label # of Middle-School Suspensions
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                label # of High-School Suspensions
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                label # of High-School Absences
            .col-sm-10
                input.form-control
        .form-group
            .col-sm-2
                p Academic Information
        .form
            +accordion('grades')
                .panel(class='panel-default')
                    .panel-heading(role='tab', id='heading9th')
                        h4.panel-title
                            a(data-toggle="collapse", data-parent="accordiongrades",
                              href = '#collapse9th', aria-expanded = 'true',
                              aria-controls='collapseOne') 9th Grade
                    unless expanded
                        .panel-collapse.collapse(id="collapse9th", role='tabpanel'
                                                aria-labelledby="heading9th")
                            .panel-body
                                label Semester 1
                                input
                                label Semester 2
                                input
                    .panel(class='panel-default')
                        .panel-heading(role='tab', id='heading10th')
