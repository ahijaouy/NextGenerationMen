extends index.pug

append head
    include dropdown.pug
    include Accordion.pug
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', rel='stylesheet', media='screen')
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js", integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa", crossorigin="anonymous")
block content
    form
        .sectionTitle
            p General Information
        .form-group
            label.col-sm-2.control-label First Name
            input.form-control(type = 'text' id = 'inputFirstName' placeholder = 'First Name')
        .form-group
            label Last Name
            input.form-control(type = 'text' id = 'inputLastName' placeholder = 'Last Name')
        .form-group
            label ID Number
            input.form-control(type = 'number' placeholder = 'ID Number')
        .form-group
            label Date of Birth
            .dropdown
                button.btn.dropdown-toggle(
                    type = 'button' data-toggle = 'dropdown') Dropdown Example
                    span.caret
                ul.dropdown-menu
                    li
                        a(href = '#') html
                        a(href = '#') css
                        a(href = '#') javascript
            .dropdown
                button.btn.dropdown-toggle(
                    type = 'button' data-toggle = 'dropdown') Dropdown Example
                    span.caret
                ul.dropdown-menu
                    li
                        a(href = '#') html
                        a(href = '#') css
                        a(href = '#') javascript
        .form-group
            label Date of entry into Next Generation Men
            input.form-control
        .form-group
            label Parent 1 Name
            input.form-control
        .form-group
            label Parent 1 Phone Number
            input.form-control
        .form-group
            label Parent 2 Name
            input.form-control
        .form-group
            label Parent 2 Phone Number
            input.form-control
        .sectionTitle
            p Pre-Program Information
        .form-group
            label # of Middle-School Suspensions
            input.form-control
        .form-group
            label # of High-School Suspensions
            input.form-control
        .form-group
            label # of High-School Absences
            input.form-control
        .sectionTitle
            p Academic Information
        .form
            +accordion('grades')
                .panel(class='panel-default')
                    .panel-heading(role='tab', id='heading9th')
                        h4.panel-title
                            a(data-toggle="collapse", data-parent="accordiongrades",
                              href = '#collapse9th', aria-expanded = 'true',
                              aria-controls='collapseOne') 9th Grade
                    unless expanded
                        .panel-collapse.collapse(id="collapse9th", role='tabpanel'
                                                aria-labelledby="heading9th")
                            .panel-body
                                label Semester 1
                                input
                                label Semester 2
                                input
                    .panel(class='panel-default')
                        .panel-heading(role='tab', id='heading10th')
