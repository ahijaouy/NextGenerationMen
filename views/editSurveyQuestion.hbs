<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Next Generation Men</h3>
      </div>
    </div>
    <div class="clearfix"></div>
    
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Editing Survey: {{survey.survey_name}}</h2>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <form method="POST" class="form-horizontal" role="form">
                <div class="form-group">
                  <legend>Edit Survey Question</legend>
                </div>

                <div class="form-group row">
                  <label for="survey_category_id" class="col-sm-2 col-form-label col-form-label-lg">Category Name</label>
                  <div class="col-sm-10">
                    <select id="survey_category_id" class="form-control" name="survey_category_id">
                      {{#each categories}}
                        <option value="{{this.survey_category_id}}">{{this.survey_category_name}}</option>
                      {{/each}}
                    </select>
                  </div>
                </div>
                <div class="form-group row">
                  <label for="question" class="col-sm-2 col-form-label col-form-label-lg">Question</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control form-control-lg" name="question" placeholder="Question to add to survey" required="required" value="{{current.question}}">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="max_score" class="col-sm-2 col-form-label col-form-label-lg">Max Question Score</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control form-control-lg" name="max_score" placeholder="Survey responses range from 1 to this value" required="required" value="{{current.max_score}}">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="question_negated" class="col-sm-2 col-form-label col-form-label-lg">Question Inverted</label>
                  <div class="col-sm-10">
                    <label class="radio-inline">
                      <input type="radio" name="question_negated" id="negated" value="1">
                      1 is best response
                    </label>
                    <label class="radio-inline">
                      <input checked="checked" type="radio" id="notNeagted" name="question_negated" value="0">
                      1 is worst response
                    </label>
                  </div>
                </div>
                
                <div class="form-group">
                  <div class="col-sm-10 col-sm-offset-2">
                    <button type="submit"  class="btn btn-primary">Save</button>
                  </div>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
