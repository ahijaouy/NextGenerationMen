<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Next Generation Men</h3>
      </div>
    </div>
    
    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12">
        <div class="x_panel">
          <div class="x_title">
            
            <div class="clearfix"></div>
          </div>
          <div class="x_content">

            <p>Below is a list of all the schools currently in the system. If you want to add a new school, refer to the ADD tab on the left navigation bar.</p>

            <!-- start project list -->
            <table id="datatable" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th style="width: 20%">School Name</th>
                  <th>School Phone Number</th>
                  <th>Principal</th>
                  <th>Cohort Coach</th>
                  <th>Counselor</th>
                  <th style="width: 20%">Actions</th>
                </tr>
              </thead>
              <tbody>
              {{#each schools}}
                <tr>
                  <td><a>{{{this.school_name}}}</a></td>
                  <td><a>{{{this.school_phone}}}</a></td>
                  <td><a>{{{this.principal_name}}}</a>
                  <td><a>{{{this.cohort_coach_name}}}</a>
                  <td><a>{{{this.couselor_name}}}</a>
                  <td>
                    <a href="/schools/{{this.school_id}}/profile" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                    <a href="/schools/{{this.school_id}}/edit" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                    <a href="/schools/{{this.school_id}}/delete" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Delete</a>
                  </td>
                </tr>
              {{/each}}
              </tbody>
            </table>
            <!-- end School list -->

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- /page content -->

