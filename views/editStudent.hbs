                                <!--Smart Wizard -->
                                <p>This is the form to edit a new student. Fill out all the information you want to change or add.</p>
                                <form id="notWizard" class="form-horizontal" method="post">
                                    <div id="wizard" class="form_wizard wizard_horizontal">
                                        <ul class="wizard_steps">
                                            <li>
                                                <a href="#step-1">
                                                    <span class="step_no">1</span>
                                                    <span class="step_descr">
