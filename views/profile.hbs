                                <input type="text" id="days_missed" name="days_missed" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <!-- Suspensions -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Suspensions: </label>
                              <div class="col-md-9">
                                <input type="text" id="suspensions" name="suspensions" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>
                              <div align="center">
                                <input type="button" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                                <input type="submit" class="btn btn-success" >
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>


                      <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                          <tr>
                            <th>Grade</th>
                            <th>Semester</th>
                            <th>Classes Missed</th>
                            <th>Days Missed</th>
                            <th>Suspensions</th>
                          </tr>
                        </thead>

                        {{#each attendance}}
                        <tbody>
                          <tr>
                            <td>{{this.grade}}</td>
                            <td>{{this.semester_number}}</td>
                            <td>{{this.classes_missed}}</td>
                            <td>{{this.days_missed}}</td>
                            <td>{{this.suspensions}}</td>
                          </tr>
                        </tbody>
                        {{/each}}
                      </table>
                    </div>
                  </div>
                  <!--End Attendance Record -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
