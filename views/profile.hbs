<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Student Profile</h3>
      </div>


    </div>

    <div class="clearfix"></div>

    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>{{student.student_first_name}} {{student.student_last_name}} Student Report</h2>

            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <div class="col-md-3 col-sm-3 col-xs-12 profile_left">
              <div class="profile_img">
                <div id="crop-avatar">
                  <!-- Current avatar -->
                  <img class="img-responsive avatar-view" src="../../../images/picture.jpg" alt="Avatar" title="Change the avatar">
                </div>
              </div>
              <h3>{{student.student_first_name}} {{student.student_last_name}}</h3>

              <ul class="list-unstyled user_data">
                <li><i class="fa fa-birthday-cake user-profile-icon"></i> {{student.student_dob}} </li>
                <li><i class="fa fa-map-marker user-profile-icon"></i>   {{student.school_name}}
                </li>

                <li>
