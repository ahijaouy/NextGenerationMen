                          <div class="modal-header">
                            <h1 class="modal-title" align="center">Add New Academic Record</h1>
                          </div>
                          <div class="modal-body">
                            <form method="post" action="/students/{{student.student_id}}/profile/academic">

                              <!-- Grade input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Grade: </label>
                              <div class="col-md-9">
                                <select id="grade" name="grade" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                                  <option value='9'>9</option>
                                  <option value='10'>10</option>
                                  <option value='11'>11</option>
                                  <option value='12'>12</option>
                                </select>
                              </div>

                              <!-- Semester input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Semester: </label>
                              <div class="col-md-9">
                                <select id="semester_number" name="semester_number" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                                  <option value='1'>1</option>
                                  <option value='2'>2</option>
                                </select>
                              </div>

                              <!-- Number of As input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Number of A's: </label>
                              <div class="col-md-9">
                                <input type="text" id="number_as" name="number_as" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <!-- Number of Bs input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Number of B's: </label>
                              <div class="col-md-9">
                                <input type="text" id="number_bs" name="number_bs" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <!-- Number of Cs input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Number of C's: </label>
                              <div class="col-md-9">
                                <input type="text" id="number_cs" name="number_cs" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <!-- Number of D/Fs input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Number of D/F's: </label>
                              <div class="col-md-9">
                                <input type="text" id="number_ds" name="number_ds" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <!-- Semester Credits input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Semester Credits: </label>
                              <div class="col-md-9">
                                <input type="text" id="semester_credits" name="semester_credits" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                              </div>

                              <div align="center">
                                <input type="button" value="Cancel" class="btn btn-danger" data-dismiss="modal">
                                <input type="submit" class="btn btn-success" >
                              </div>
                            </form>
                          </div>
                        </div>
                      </div>
                      </div>


                      <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                          <tr>
                            <th>Grade</th>
                            <th>Semester</th>
                            <th>A's</th>
                            <th>B's</th>
                            <th>C's</th>
                            <th>F's</th>
                            <th>GPA</th>
                            <th>Credits</th>
                          </tr>
                        </thead>

                        {{#each record}}
                        <tbody>
                          <tr>
                            <td>{{this.grade}}</td>
                            <td>{{this.semester_number}}</td>
                            <td>{{this.number_as}}</td>
                            <td>{{this.number_bs}}</td>
                            <td>{{this.number_cs}}</td>
                            <td>{{this.number_ds}}</td>
                            <td>{{this.semester_gpa}}</td>
                            <td>{{this.semester_credits}}</td>
                          </tr>
                        </tbody>
                        {{/each}}
                      </table>
                    </div>
                  </div>
                  <!--End Academic Record -->
                  <!--Begin Attendance Record -->
