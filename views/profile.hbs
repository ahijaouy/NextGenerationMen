                          <div class="modal-header">
                            <h1 class="modal-title" align="center">Add New Attendance Record</h1>
                          </div>
                          <div class="modal-body">
                            <form method="post" action="/students/{{student.student_id}}/profile/attendance">

                              <!-- Grade input -->
                              <label class="control-label col-md-3 col-sm-3 col-xs-12" style="font-size: 15px; margin-top: 4px;" align="right">Grade: </label>
                              <div class="col-md-9">
                                <select id="grade" name="grade" required="required" class="form-control col-md-7 col-xs-12" style="margin-bottom: 10px;">
                                  <option value='9'>9</option>
                                  <option value='10'>10</option>
                                  <option value='11'>11</option>
                                  <option value='12'>12</option>
                                </select>
                              </div>

