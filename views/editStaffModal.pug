.modal-dialog.modal-lg
  .modal-content
    .modal-header
      button(type="button" class="close" data-dismiss="modal") &times;
      button.btn.btn-default.btn-ms(tyle = 'button' href = '#'
                                    data-dismiss = 'modal' data-toggle = 'modal'
                                    style = 'position: absolute; left: 2%'
                                    data-target = '#editStudentModal')
      h4.modal-title(style="text-align-last:center") Add Staff
    .modal-body
      .container-fluid
        form.form-horizontal(role='form', action="/addstaff" method="post")
          include addStaffForm.pug
          .form-group
                  button.btn.btn-default(type='submit') Submit
