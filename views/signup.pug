doctype html
html
  head
    title= 'Signup page'
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(href='https://netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css', rel='stylesheet', media='screen')
    style.
      body {
        padding-top:80px;
      }
  body
    div(class='container')
      div(class='col-sm-6 col-sm-offset-3')
        h1(class='fa fa-sign-in') Register
        #message
          if (message && message.length != 0)
            - var wow = message
            div(class='alert alert-danger') #{wow}
        p.lead Please Register
        form(role='form', action="/signup",method="post", style='max-width: 300px;')
          .form-group
              input.form-control(type='text', name="username", placeholder='Enter Username')
          .form-group
            input.form-control(type='password', name="password", placeholder='Password')
          .form-group
            input.form-control(type='password', name="Cpassword", placeholder='Confirm Password')
          button.btn.btn-default(type='submit') Submit
