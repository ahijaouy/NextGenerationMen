extends dashboard.pug

block navBar
  ul.nav.navbar-nav
    li
      a(href='dashboard') Overview
    li
      a(href='students') Students
    li.active
      a(href='schools') Schools
    li
      a(href='staff') Staff
    li
      a(href='survey') Surveys
    li
      a(href='myprofile') My Profile
    li
      a.pull-right(href='logout') Logout - #{user}

block content
  h1 Schools

  input(type='search' id='search' value class='form-control' placeholder='Search...')
  .pre-scrollable
    .table-responsive
      table#studentTable.table.table-striped.table-hover
        thead
          tr
            th.text-center School
            th.text-center NGM Students
            th.text-center Contact Person
            th.text-center Avg. GPA
            th.text-center Extra?
        tr
          td: a(href="#" data-toggle="modal" data-target="#schoolInfoModal") School 1
          td: a(href="#" data-toggle="modal" data-target="#schoolInfoModal") 5
          td: a(href="#" data-toggle="modal" data-target="#schoolInfoModal") John Smith
          td: a(href="#" data-toggle="modal" data-target="#schoolInfoModal") 3.5
          td: a(href="#" data-toggle="modal" data-target="#schoolInfoModal") ??
        tr
          td school 2
          td 10
          td Jonah Long
          td 2.9
          td ??

    //for (x =0; x < input.size; x++)
      tr
        td input[x].name
    .btn.btn-default(type = 'submit' data-toggle = 'modal' data-target = '#addSchoolModal') Add School

  #addSchoolModal.modal(role='dialog')
      //include addSchoolModal.pug
      .modal-dialog
        .modal-content
          .modal-header
            button(type="button" class="close" data-dismiss="modal") &times;
            h4.modal-title(style="text-align-last:center") Add School
          .modal-body
            .container-fluid
              form.form-horizontal(role='form', action="/addschool",method="post", style='max-width: 300px;')
                //include addSchoolForm.pug
                .form-group
                  .col-sm-12
                      p
                        b School Information
                .form-group
                  .col-sm-2
                      label School Name
                  .col-sm-10
                      input.form-control(type = 'text' placeholder = 'School Name')
                .form-group
                    .col-sm-2
                        label Number of NGM Students
                    .col-sm-10
                        input.form-control(type = 'number' placeholder = 'Number of NGM Students')
                .form-group
                    .col-sm-2
                        label Contact Person
                    .col-sm-10
                        input.form-control(type = 'text' placeholder = 'Contact Person')
                .form-group
                    .col-sm-2
                        label Average GPA
                    .col-sm-10
                        input.form-control(type = 'number' placeholder = 'Average Gpa')

                .form-group
                        button.btn.btn-default(type='submit') Submit

  #schoolInfoModal.modal(role="dialog")
      //include schoolInfoModal.pug
      .modal-dialog
        .modal-content
          .modal-header
            button(type="button" class="close" data-dismiss="modal") &times;
            h4.modal-title(style="text-align-last:center") School Info
          .modal-body
            .container-fluid
              form.form-horizontal(role='form', action="/addinfo",method="post", style='max-width: 300px;')
                  //include schoolInfoForm.pug
                  .form-group
                    .col-sm-12
                        p
                          b School Information
                  .form-group
                    .col-sm-2
                        label School Name
                    .col-sm-10
                        input.form-control(type = 'text' placeholder = 'School Name')
                  .form-group
                      .col-sm-2
                          label Number of NGM Students
                      .col-sm-10
                          input.form-control(type = 'number' placeholder = 'Number of NGM Students')
                  .form-group
                      .col-sm-2
                          label Contact Person
                      .col-sm-10
                          input.form-control(type = 'text' placeholder = 'Contact Person')
                  .form-group
                      .col-sm-2
                          label Average GPA
                      .col-sm-10
                          input.form-control(type = 'number' placeholder = 'Average Gpa')

                  .form-group
                          button.btn.btn-default(type='submit') Submit


append scripts
  script
    include jquery-3.1.1.slim.min.js
    include jquery.searchable-1.1.0.min.js
  script.
    $(function () {
      $( '#studentTable' ).searchable({
        striped : true,
        oddRow: { 'background-color': '#f5f5f5' },
        evenRow: { 'background-color': '#fff' },
        searchType: 'fuzzy'


      });
    });
