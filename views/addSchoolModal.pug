.modal-dialog.modal-lg
  .modal-content
    .modal-header
      button(type="button" class="close" data-dismiss="modal") &times;
      h4.modal-title(style="text-align-last:center") Add School
    .modal-body
      .container-fluid
        form.form-horizontal(role='form', action="/addschool",
                                method="post", style='max-width: 300px;')
          include addSchoolForm.pug
          .form-group
                  button.btn.btn-default(type='submit') Submit
